<Window x:Class="ZTI.Tools.WPF.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZTI.Tools.WPF.Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <WrapPanel>
            <Button Content="Set cursor" Click="btnSetCursor_Click"/>
            <Button Content="Set system cursor" Click="btnSetSystemCursor_Click"/>
            <Button Content="Reset system cursor" Click="btnResetSystemCursor_Click"/>
        </WrapPanel>
    </Grid>
</Window>
